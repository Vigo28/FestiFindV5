@model FestFindV2.Models.Event

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Beschrijving
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            Locatie
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            Datum en tijd
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date_Time)
        </dd>
        <dt class="col-sm-2">
            Prijs
        </dt>
        <dd class="col-sm-10">
            €@Html.DisplayFor(model => model.Costs)
        </dd>
        <dt class="col-sm-2">
            Plekken vrij
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlacesLeft)
        </dd>
    </dl>
</div>
<br />
<!-- Add the "Meld je nu aan!" button -->
@if (User.IsInRole("Participant") && Model.PlacesLeft > 0)
{
    <div>
        <a asp-action="CreateOrder" asp-route-eventId="@Model.Id" class="btn btn-primary">Meld je nu aan!</a>
    </div>
}
@if (!User.IsInRole("Participant")) //else werkt hier niet?
{
    <div>
        Meld je eerst aan als participant om je aan te melden voor dit event!
    </div>
}
@if (Model.PlacesLeft == 0)
{
    <div>
        Dit evenement is uitverkocht!
    </div>
}

<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
