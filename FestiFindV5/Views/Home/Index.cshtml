@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <img src="~/images/festifind.png" style="width: 50%;">

    <h1 class="display-4">Welkom bij FestiFind</h1>
    <p>Het evenementensite van Nederland!</p>
</div>

@foreach (var e in Model)
{
    <div class="slideshow-container">
        <div class="mySlides">
            @{
                // Construct the image source URL based on the category
                string imageUrl = $"~/images/{e.Category}.jpg";
            }
            <img src="@Url.Content(imageUrl)" alt="@e.Category" />
            <div class="event-description">
                <h2>@e.Name</h2>
                <p>@e.Description</p>
                <p>@e.Date_Time</p>
                <a href="@Url.Action("Details", "Events", new { id = e.Id })" class="btn btn-primary">View Details</a>
            </div>
            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
    </div>
}


<div style="text-align:center">
    @for (int i = 0; i < Model.Count; i++)
    {
        <span class="dot" onclick="currentSlide(@i + 1)"></span>
    }
</div>
