@model FestFindV2.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Order nummer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Naam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Participant.Name)
        </dd>
        <dt class="col-sm-2">
            Event naam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Name)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Participant"))
    {
        <a asp-action="MyOrders">Uw orders weergeven</a>
    }
    @if (User.IsInRole("Organizer"))
    {
        <a asp-action="Index">Orders weergeven</a>
    }
</div>
